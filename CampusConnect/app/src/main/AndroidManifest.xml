<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.campusconnect.campusconnect">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_login" >
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name=".activities.AssignmentCa1Activity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_assignments">
        </activity>
        <activity
            android:name=".activities.AssignmentCa2Activity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_assignments">
        </activity>
        <activity
            android:name=".activities.AssignmentFirstActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_assignments">
        </activity>
        <activity
            android:name=".activities.AssignmentSecondActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_assignments">
        </activity>
        <activity
            android:name=".activities.AssignmentThirdActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_assignments">
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_register">
        </activity>
        <activity
            android:name=".activities.UsersListActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_userslist">
        </activity>
        <activity
            android:name=".activities.PostActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_post">
        </activity>
    </application>

</manifest>